{
    "version": "3.4.4",
    "compilerOptions": {
        "lib": ["es5", "es6"],
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "declaration": true,
        "outDir": "./dist"
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules"
    ],
    "typingOptions": {
        "enableAutoDiscovery": true
    },
    "typeRoots": [
        "node_modules/@types"
      ]
}